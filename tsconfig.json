{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "types",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@types/node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
